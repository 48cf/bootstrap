#! /bin/sh

name=menix-debug
from_source=menix
imagedeps="build-essential rustup"
allow_network=yes
hostdeps="llvm"
builddeps="mlibc-headers"

build() {
    cargo_build \
        --target=toolchain/${ARCH}-kernel.json
}

package() {
    mkdir -p "${dest_dir}${prefix}/share/menix/"
    install -m644 target/${ARCH}-kernel/debug/menix.kso "${dest_dir}${prefix}/share/menix/menix-debug"
}
