#! /bin/sh

name=menix
from_source=menix
imagedeps="build-essential rustup"
allow_network=yes
hostdeps="llvm"
builddeps="mlibc-headers"
allow_source_writes="yes"

build() {
    cargo_build \
        --release \
        --target="${source_dir}/toolchain/${ARCH}-kernel.json" \
        -Zbuild-std=core,alloc \
        -Zbuild-std-features=compiler-builtins-mem
}

package() {
    mkdir -p "${dest_dir}${prefix}/share/menix/"
    mkdir -p "${dest_dir}${prefix}/lib/modules/"

    install -m644 ${ARCH}-kernel/release/menix.kso "${dest_dir}${prefix}/share/menix/menix"
    install -m644 ${ARCH}-kernel/release/*.kso "${dest_dir}${prefix}/lib/modules/"

    rm "${dest_dir}${prefix}/lib/modules/menix.kso"
}
